<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Vista previa de la cámara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/control_panel" />

    <!-- Overlay de información -->
    <LinearLayout
        android:id="@+id/info_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/overlay_background"
        android:orientation="vertical"
        android:padding="16dp">



        <TextView
            android:id="@+id/tv_estado_escaneo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listo para escanear"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_frames_analizados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Frames analizados: 0"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_plagas_detectadas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Plagas detectadas: 0"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Barra de progreso -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:indeterminate="true"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Panel de controles -->
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/control_panel_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Botones de control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_iniciar_escaneo"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_start_background"
                android:text="INICIAR ESCANEO"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_detener_escaneo"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_stop_background"
                android:text="DETENER"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:enabled="false" />

        </LinearLayout>

        <!-- Botón finalizar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_back_main"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/confidence_badge_background"
                android:text="REGRESAR"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_finalizar_escaneo"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:background="@drawable/btn_finish_background"
                android:text="FINALIZAR Y VER REPORTE"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false" />
        </LinearLayout>


        <!-- Instrucciones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Mueve la cámara lentamente sobre el área a escanear"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textAlignment="center"
            android:alpha="0.8" />

    </LinearLayout>

</RelativeLayout>