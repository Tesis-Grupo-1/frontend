<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_selectable_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/iv_selectable_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen seleccionable" />

            <!-- Overlay oscuro cuando está seleccionada -->
            <View
                android:id="@+id/overlay_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80FF0000"
                android:visibility="gone" />

            <!-- Porcentaje -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:background="@drawable/percentage_badge_background"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_selectable_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Checkbox de selección -->
            <CheckBox
                android:id="@+id/checkbox_select"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:background="@drawable/circle_red_background"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:buttonTint="#FFFFFF" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_image_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen #0"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_selection_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Toca para seleccionar"
                android:textColor="#999999"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>