<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/login_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Espaciado superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <!-- Header con logo y título -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <!-- Título de la app -->
            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINASCAN"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/app_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detección inteligente de plagas"
                android:textSize="16sp"
                android:textColor="#66BB6A"
                android:layout_marginBottom="48dp" />

        </LinearLayout>

        <!-- Formulario de login -->
        <LinearLayout
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_form_background"
            android:padding="32dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp" />

            <!-- Campo de usuario/email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario o Email"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="#4CAF50"
                app:boxStrokeColor="#4CAF50"
                app:hintTextColor="#4CAF50"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp" />

            <!-- Campo de contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="#4CAF50"
                app:endIconMode="password_toggle"
                app:endIconTint="#4CAF50"
                app:boxStrokeColor="#4CAF50"
                app:hintTextColor="#4CAF50"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="24dp">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón de iniciar sesión -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="INICIAR SESIÓN"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50"
                app:cornerRadius="28dp"
                android:layout_marginBottom="16dp"
                app:rippleColor="#2E7D32" />

            <!-- Recordar sesión -->
            <CheckBox
                android:id="@+id/remember_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recordar sesión"
                android:textColor="#666666"
                android:buttonTint="#4CAF50"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Enlaces adicionales -->
        <LinearLayout
            android:id="@+id/footer_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <!-- Olvidé mi contraseña -->
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp" />

            <!-- Crear cuenta -->
            <TextView
                android:id="@+id/create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿No tienes cuenta? Regístrate"
                android:textColor="#666666"
                android:textSize="14sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>